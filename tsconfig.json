{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist",
      "esModuleInterop": true,   
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "skipLibCheck": true
   },
   "include": [
      "src",
      "src/database"
   ],
   "exclude": [
      "**/*.spec.ts",
      "**/*.test.ts"
   ]
}